{
  "name": "quizzer-backend",
  "version": "1.0.0",
  "description": "Backend side for projecr \"Quizzer\"",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:production": "docker rmi -f quizzer_backend && docker build . -t quizzer_backend",
    "shutdown:production": "docker rm -f backend",
    "start:production": "docker run --network quizzer_network --env-file ./.env.production --name backend -d quizzer_backend",
    "restart:production": "npm run shutdown:production && npm run build:production && npm run start:production",
    "test": "jest --detectOpenHandles --forceExit --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gil392/Quizzer.git"
  },
  "author": "Tomer, Ori, Itay, Omer, Gil",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gil392/Quizzer/issues"
  },
  "homepage": "https://github.com/gil392/Quizzer#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongodb": "^4.0.6",
    "@types/multer": "^1.4.12",
    "@types/ramda": "^0.30.2",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.90.0",
    "ramda": "^0.30.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5",
    "youtube-transcript": "^1.2.1",
    "zod": "^3.24.1"
  }
}
